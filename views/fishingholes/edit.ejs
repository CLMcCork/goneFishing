<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Fishing Hole</h1>
    <div class="col-6 offset-3">
        <form action="/fishingholes/<%= fishinghole._id %>?_method=PUT" method ="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="fishinghole[title]" value="<%= fishinghole.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="fishinghole[location]" value="<%= fishinghole.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="fishinghole[price]" value="<%= fishinghole.price %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="fishinghole[description]" required><%= fishinghole.description %> </textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <% fishinghole.images.forEach(function(img, i) { %>
                    <img src="<%=img.url %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                    </div>
                    <label for="image-<%= i %>">Delete</label>
                    <% }) %>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload More Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
              </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Fishing Hole</button>
            </div>
        </form>
        <a href="/fishingholes/<%= fishinghole._id %>">Back to Fishing Hole</a>
    </div>
</div>